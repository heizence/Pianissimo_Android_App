<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_broadcast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/fragmentBroadcastLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="16sp"
        android:paddingRight="16sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragmentBroadcastTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="라이브 방송 목록"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/fragmentBroadcastLiveStartBtn"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:src="@drawable/ic_camera_01" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/broadcastRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20sp"
            android:paddingBottom="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>